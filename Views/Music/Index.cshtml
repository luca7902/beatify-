
<div class="body">
    <div class="bottomPlayer-container ">
        <div class="musicPlayer-div">
            <img src="~/images/CaluAstronaut.JPG" alt="Cover" class="player-img">
            <div class="song-info">
                <div style="color:white; font-size:14px;">Somebody</div>
                <div style="color:#aaa; font-size:12px;">Latto</div>
            </div>
        </div>
        <div class="player-controls">
            <i class="fa-solid fa-backward" style="color:white; margin:0 10px;"></i>
            <i class="fa-solid fa-play" style="color:white; margin:0 10px;"></i>
            <i class="fa-solid fa-forward" style="color:white; margin:0 10px;"></i>
        </div>
        <div class="player-right">
            Lautstärke
        </div>
    </div>
    <div class="sideBar-Div">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px; height: 100vh;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="bi bi-soundwave"></i>
                <span class="fs-4">Beatify</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link active text-white"> @* active macht das list item grün *@
                        <i class="bi bi-file-earmark-music"></i> Create Beat
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white">
                        <i class="bi bi-box"></i> Create BeatPacket
                    </a>
                </li>
            </ul>
        </div>

    </div>
    <div class="artistAndSongOverview">
        <div class="SongListHead-Div">
            <div class="SongListHead-Info">
                <div class="headphonesIcon-Button">
                    <i class="fa-solid fa-headphones-simple" id="headphones-emoji"></i>
                </div>
            </div>
            <div class="playSongs-Head">
                <div class="playButtonIcon-Button">
                    <i class="fa-solid fa-play"></i>
                </div>
            </div>

            <div class="searchFilter">
                <div class="Filter-row" id="song1">
                    <div class="Filter-hashtag"><span>#</span></div>
                    <div class="Filter-title"><span>Title</span></div>
                    <div class="Filter-genre"><span>genre</span></div>
                    <div class="Filter-added"><span>Upload Date</span></div>
                    <div class="Filter-duration"><i class="fa-solid fa-clock"></i></div>
                </div>
            </div>
        </div>
        <div class="console">
            <div class=" console-Div">
            </div>
            <div class="playlist-Div">
                <div class="song-list" id="song-list" data-src="song1.mp3">
                    <div class="song-row" id="song1" data-audio="/audio/blue.wav">
                        <div class="song-index">1</div>
                        <div class="song-cover">
                            <img src="~/images/CaluAstronaut.JPG" alt="Cover">
                        </div>
                        <div class="song-info">
                            <div class="song-title">Somebody</div>
                            <div class="song-artist">Latto</div>
                        </div>
                        <div class="song-album">Somebody</div>
                        <div class="song-added">vor 15 Stunden</div>
                        <div class="song-duration">3:22</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<audio id="audio-player"></audio>
